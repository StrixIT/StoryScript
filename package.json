{
    "name": "storyscript",
    "description": "StoryScript Adventure",
    "version": "1.0.0",
    "author": "Rutger Schurgers",
    "private": true,
    "type": "module",
    "main": "./src/UI/electron.cjs",
    "build": {
        "appId": "storyscript.id",
        "files": [
            "./src/UI/electron.cjs",
            "dist/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "dist/icon.ico"
        }
    },
    "scripts": {
        "create-game": "node createGame.js",
        "sca": "node createAsset.js action",
        "scl": "node createAsset.js location",
        "scf": "node createAsset.js feature",
        "sce": "node createAsset.js enemy",
        "scp": "node createAsset.js person",
        "sci": "node createAsset.js item",
        "sck": "node createAsset.js key",
        "scq": "node createAsset.js quest",
        "start": "vite",
        "test": "vitest --ui",
        "publish": "webpack --config webpack/webpack.production.js",
        "electron-start": "webpack --config webpack/webpack.production.js && electron .",
        "electron-publish": "webpack --config webpack/webpack.production.js && electron-builder"
    },
    "devDependencies": {
        "@angular/common": "^18.2.1",
        "@angular/compiler": "^18.2.1",
        "@angular/core": "^18.2.1",
        "@angular/forms": "^18.2.1",
        "@angular/platform-browser": "^18.2.1",
        "@angular/platform-browser-dynamic": "^18.2.1",
        "@ng-bootstrap/ng-bootstrap": "^17.0.0",
        "@popperjs/core": "^2.11.6",
        "@types/node": "^22.5.0",
        "@types/webpack-env": "^1.18.0",
        "@vitest/coverage-v8": "^2.0.5",
        "@vitest/ui": "^2.0.5",
        "bootstrap": "^5.3.2",
        "copy-webpack-plugin": "^11.0.0",
        "coverage-istanbul-loader": "^3.0.5",
        "css-loader": "^6.8.1",
        "dotenv": "^16.3.1",
        "dotenv-webpack": "^8.0.1",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "esbuild-loader": "^4.0.2",
        "fork-ts-checker-webpack-plugin": "^9.0.2",
        "fs-extra": "^11.2.0",
        "jsdom": "^24.0.0",
        "html-webpack-plugin": "^5.5.4",
        "image-minimizer-webpack-plugin": "^3.8.3",
        "jsonfile": "^6.1.0",
        "mini-css-extract-plugin": "^2.7.6",
        "remove-files-webpack-plugin": "^1.5.0",
        "replace-in-file-webpack-plugin": "^1.0.6",
        "rxjs": "^7.8.1",
        "sharp": "^0.33.0",
        "string-replace-loader": "^3.1.0",
        "typescript": "^5.5.4",
        "vite": "^5.4.2",
        "vite-plugin-checker": "^0.7.2",
        "vite-plugin-static-copy": "^1.0.6",
        "vite-tsconfig-paths": "^5.0.1",
        "vitest": "^2.0.5",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-merge": "^5.10.0",
        "zip-webpack-plugin": "^4.0.1",
        "zone.js": "^0.14.10"
    }
}
