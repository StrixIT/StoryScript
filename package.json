{
    "name": "storyscript",
    "description": "StoryScript Adventure",
    "version": "1.0.0",
    "author": "Rutger Schurgers",
    "private": true,
    "main": "./src/UI/electron.js",
    "build": {
        "appId": "storyscript.id",
        "files": [
            "./src/UI/electron.js",
            "dist/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "dist/icon.ico"
        }
    },
    "scripts": {
        "create-game": "node createGame.js",
        "create-location": "node createAsset.js location",
        "create-feature": "node createAsset.js feature",
        "create-enemy": "node createAsset.js enemy",
        "create-person": "node createAsset.js person",
        "create-item": "node createAsset.js item",
        "create-key": "node createAsset.js key",
        "create-quest": "node createAsset.js quest",
        "start": "webpack-dev-server --config webpack/webpack.development.js",
        "publish": "webpack --config webpack/webpack.production.js",
        "engine-tests": "cd src/Tests/Engine && karma start",
        "myroleplayinggame-tests": "cd src/Tests/Games/MyRolePlayingGame && karma start",
        "electron-start": "webpack --config webpack/webpack.production.js && electron .",
        "electron-publish": "webpack --config webpack/webpack.production.js && electron-builder"
    },
    "devDependencies": {
        "@angular/common": "^17.0.5",
        "@angular/compiler": "^17.0.5",
        "@angular/core": "^17.0.5",
        "@angular/forms": "^17.0.5",
        "@angular/platform-browser": "^17.0.5",
        "@angular/platform-browser-dynamic": "^17.0.5",
        "@ng-bootstrap/ng-bootstrap": "^16.0.0",
        "@popperjs/core": "^2.11.6",
        "@types/jasmine": "^5.1.4",
        "@types/node": "^20.10.1",
        "@types/webpack-env": "^1.18.0",
        "bootstrap": "^5.3.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "electron": "^27.1.3",
        "electron-builder": "^24.9.1",
        "file-loader": "^6.2.0",
        "fs-extra": "^11.2.0",
        "html-webpack-plugin": "^5.5.3",
        "imagemin-webpack-plugin": "^2.4.2",
        "istanbul-instrumenter-loader": "^3.0.1",
        "jasmine": "^5.1.0",
        "jsonfile": "^6.1.0",
        "karma": "^6.4.2",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-edge-launcher": "^0.4.2",
        "karma-firefox-launcher": "^2.1.2",
        "karma-jasmine": "^5.1.0",
        "karma-requirejs": "^1.1.0",
        "karma-typescript": "^5.5.4",
        "karma-webpack": "^5.0.0",
        "mini-css-extract-plugin": "^2.7.6",
        "optimize-css-assets-webpack-plugin": "^6.0.1",
        "raw-loader": "^4.0.2",
        "reflect-metadata": "^0.1.13",
        "remove-files-webpack-plugin": "^1.5.0",
        "replace-in-file-webpack-plugin": "^1.0.6",
        "requirejs": "^2.3.6",
        "rxjs": "^7.8.1",
        "style-loader": "^3.3.3",
        "terser-webpack-plugin": "^5.3.9",
        "ts-loader": "^9.5.1",
        "tslint": "^6.1.3",
        "typescript": "^4.8.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "^5.10.0",
        "webpack-split-chunks": "^0.2.1",
        "zip-webpack-plugin": "^4.0.1",
        "zone.js": "^0.14.2"
    }
}
