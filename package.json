{
    "name": "StoryScript",
    "description": "StoryScript Adventure",
    "version": "1.0.0",
    "author": "Rutger Schurgers",
    "private": true,
    "main": "./src/UI/electron.js",
    "build": {
        "appId": "storyscript.id",
        "files": [
            "./src/UI/electron.js",
            "dist/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "dist/icon.ico"
        }
    },
    "scripts": {
        "create-game": "node createGame.js",
        "create-location": "node createAsset.js location",
        "create-feature": "node createAsset.js feature",
        "create-enemy": "node createAsset.js enemy",
        "create-person": "node createAsset.js person",
        "create-item": "node createAsset.js item",
        "create-key": "node createAsset.js key",
        "create-quest": "node createAsset.js quest",
        "start": "webpack-dev-server --config webpack/webpack.development.js",
        "publish": "webpack --config webpack/webpack.production.js",
        "engine-tests": "cd src/Tests/Engine && karma start",
        "myroleplayinggame-tests": "cd src/Tests/Games/MyRolePlayingGame && karma start",
        "electron-start": "webpack --config webpack/webpack.production.js && electron .",
        "electron-publish": "webpack --config webpack/webpack.production.js && electron-builder"
    },
    "devDependencies": {
        "@types/node": "^12.12.14",
        "@types/webpack-env": "^1.14.1",
        "@types/jasmine": "^3.4.4",
        "@angular/common": "^8.2.14",
        "@angular/compiler": "^8.2.14",
        "@angular/core": "^8.2.14",
        "@angular/forms": "^8.2.14",
        "@angular/platform-browser": "^8.2.14",
        "@angular/platform-browser-dynamic": "^8.2.14",
        "@ng-bootstrap/ng-bootstrap": "^5.1.4",
        "zone.js": "^0.10.2",
        "rxjs": "^6.5.3",
        "reflect-metadata": "^0.1.12",
        "typescript": "^3.7.3",
        "tslint": "^5.20.1",
        "jsonfile": "^5.0.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "webpack-merge": "^4.2.2",
        "webpack-split-chunks": "0.2.1",
        "ts-loader": "^6.2.1",
        "css-loader": "^3.2.0",
        "style-loader": "^1.0.0",
        "raw-loader": "^3.1.0",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.9.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "copy-webpack-plugin": "^5.0.5",
        "terser-webpack-plugin": "^2.3.1",
        "remove-files-webpack-plugin": "^1.1.3",
        "replace-in-file-webpack-plugin": "^1.0.6",
        "imagemin-webpack-plugin": "^2.4.2",
        "zip-webpack-plugin": "^3.0.0",
        "bootstrap": "^4.4.1",
        "fs-extra": "^8.1.0",
        "jasmine": "^3.5.0",
        "requirejs": "^2.3.6",
        "karma": "^4.4.1",
        "karma-jasmine": "^2.0.1",
        "karma-requirejs": "^1.1.0",
        "karma-typescript": "^4.1.1",
        "karma-coverage": "^2.0.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-edge-launcher": "^0.4.2",
        "karma-firefox-launcher": "^1.2.0",
        "karma-webpack": "^4.0.2",
        "karma-coverage-istanbul-reporter": "^2.1.1",
        "istanbul-instrumenter-loader": "^3.0.1",
        "electron": "^7.1.7",
        "electron-builder": "^21.2.0"
    }
}
